<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!--
    Add-on definitions.
    reference: http://kodi.wiki/view/Add-on_structure#addon.xml
    http://kodi.wiki/view/Addon.xml
-->

<addon	id="script.bmw.infotainment"
		name="Raspberry Pi BMW Infotainment"
		version="1.0.0"
		provider-name="Lars Gunnarsson">
	 
	<requires>
		<import addon="xbmc.python" version="1.0"/>
	</requires>
	
	<!--
	    Start service on XBMC startup. Appears under
	    "Settings -> Addons -> enabled add-ons > services -> Raspberry Pi BMW Infotainment"
	-->
	<extension point="xbmc.service" start="startup" library="service.py" />

	<!--
	    Default handler for script. (this appears as "launch" button under settings)
	     "Settings -> Addons -> enabled add-ons -> ... -> Raspberry Pi BMW Infotainment"
	    <extension point="xbmc.python.script" library="default-handler.py" />
	-->

	<!-- Show info about addon -->
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">BMW infotainment gateway</summary>
		<description lang="en">A Script for controlling Raspberry Pi from original BMW infotainment</description>
		<website>http://one-infiniteloop.com/dev/projects/car-media-player/</website>
		<source>http://git.one-infiniteloop.com/larsa/bmw-infotainment</source>
	</extension>
</addon>