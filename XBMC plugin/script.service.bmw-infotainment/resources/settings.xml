<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!-- 
	Settings for this  add-on/plugin/script/service???
	Reference: http://kodi.wiki/view/Add-on_settings 
-->

<settings>

	<category label="TCP gateway">

		<!--- Gateway settings -->
		<setting label="Gateway settings" type="lsep"/>
		<setting label="Address" id="gateway.ip-address" type="ipaddress" default="127.0.0.1"/>
		<setting label="Port" id="gateway.port" type="number" default="4287"/>

		<!-- Launch connection (forced) -->
		<setting label="Status" type="lsep"/>
		<setting label="Connection status" type="text" id="gateway.status" default="Disconnected" enable="false"/>
		<setting label="Connect" type="action" action="RunScript(script.bmw.infotainment, connect)"/>
		<setting label="Disconnect" type="action" action="RunScript(script.bmw.infotainment, disconnect)"/>

	</category>

	<category label="BMW addon">
		<setting label="Welcome text in IKE" type="text" id="welcome-text" />
		<setting label="Let me know when the champagne is cooled" type="bool" id="background" default="true"/>
	</category>

</settings>


