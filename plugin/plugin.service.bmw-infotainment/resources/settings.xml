<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!-- Reference: http://kodi.wiki/view/Add-on_settings -->

<settings>

	<setting label="Gateway settings" type="lsep"/>
	<setting label="Address" id="gateway.ip-address" type="ipaddress" default="127.0.0.1"/>
	<setting label="Port" id="gateway.port" type="number" default="4287"/>

	<setting label="BMW-infotainment" type="lsep"/>
	<setting label="Show welcome-message in kombi-instument on start" type="bool" id="welcome-msg.enabled" default="true"/>
	<setting label="Welcome-message text" enable="eq(-1,true)" type="text" default="Welcome!" id="welcome-msg.text"/>

	<setting type="sep"/>
	<setting label="Shutdown on ignition-key out (recommended)" type="bool" id="system-shutdown.enabled" default="true"/>
	<setting label="Shutdown after (hr:min)" enable="eq(-1,true)" type="time" id="system-shutdown.time" default="00:30"/>
</settings>
