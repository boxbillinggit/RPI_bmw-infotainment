<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon	id="plugin.service.bmw-infotainment"
		name="Raspberry Pi BMW Infotainment"
		version="1.0.2"
		provider-name="Lars Gunnarsson">

	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
	</requires>
	<extension point="xbmc.service" start="startup" library="service.py"/>
	<extension point="xbmc.addon.metadata">
		<platform>linux</platform>
		<summary lang="en">BMW infotainment</summary>
		<description lang="en">
			This add-on makes it possible to control KODI from your original BMW-infotainment boardmonitor buttons (and also controlling your BMW from KODI).
		</description>
		<disclaimer>
			One component of this plugin is built in C++ and currently built and distributed for target "armhf" (Raspberry Pi). Except for this component the plugin shall work on other linux-platforms as well!
		</disclaimer>
		<website>http://one-infiniteloop.com/dev/projects/car-media-player/</website>
		<email>lars.gunnarsson@one-infiniteloop.com</email>
		<source>http://git.one-infiniteloop.com/larsa/bmw-infotainment</source>
	</extension>
	<extension point="xbmc.addon.repository" name="BMW-infotainment Repository for automatic updates">
		<info compressed="true">http://deploy.one-infiniteloop.com/kodi/release/addons.xml</info>
		<checksum>http://deploy.one-infiniteloop.com/kodi/release/addons.xml.md5</checksum>
		<datadir zip="true">http://deploy.one-infiniteloop.com/kodi/release</datadir>
	</extension>
</addon>